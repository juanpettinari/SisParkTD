@model SisParkTD.Models.ViewModels.CuentaUsuarioViewModel
@{
    ViewBag.Title = "Log in";
}
<style>
    .validation-summary-errors {
        text-align: center;
        margin-top: -20px;
    }

        .validation-summary-errors ul {
            margin: 0;
            padding: 0;
            list-style: none;
        }
</style>
<header>
    <div class="header-content">
        <div class="container">


            <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-6 login">
                    <div class="well">
                        <div class="row">
                            <div class="col-sm-3"></div>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                                <div class="col-sm-6">

                                    <div class="row">
                                        <div class="col-md-1"></div>
                                        <div class="col-md-9" style="text-align:center; padding:0 20px;"></div>
                                        <div class="col-md-1"></div>
                                    </div>
                                    <div class="input-group">
                                        <div class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></div>
                                        <input id="NombreDeUsuario" name="NombreDeUsuario" type="text" class="form-control" placeholder="Usuario">
                                    </div>
                                    <div class="input-group" style="margin-top: 5px;">
                                        <div class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></div>
                                        <input id="Contrasenia" name="Contrasenia" type="password" class="form-control" placeholder="Contraseña">
                                    </div>
                                    <button type="submit" class="btn btn-success btn-block">INGRESAR</button>
                                </div><!-- /.col-sm-8 -->
                            }
                            <div class="col-sm-3"></div>
                        </div><!-- /.row -->

                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10">
                                <!-- MENSAJE DE ERROR LOGIN -->
                                @if (ViewData.ModelState.Any((x => x.Value.Errors.Any())))
                                {
                                    <div class="alert alert-danger alert-dismissible" role="alert" style="margin-bottom: 10px;">
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                        <strong style="visibility: hidden;"><span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span> Error!</strong>
                                        @Html.ValidationSummary(true, "Usuario y/o contraseña incorrectos")
                                    </div>
                                }
                                <!-- /MENSAJE DE ERROR LOGIN -->
                            </div>
                            <!-- /.col-md-10 -->
                            <div class="col-md-1"></div>
                        </div><!-- /.row -->

                        <div class="row">
                            <div class="col-md-1"></div>
                            <div class="col-md-10 tex_info">
                            </div>
                            <div class="col-md-1"></div>
                        </div><!-- /.row -->

                    </div><!-- /.well -->

                </div><!-- /.conenido_home -->
                <div class="col-md-3"></div>
            </div><!-- /.row -->
        </div><!-- /.container -->
    </div><!-- /.header-content -->
</header>

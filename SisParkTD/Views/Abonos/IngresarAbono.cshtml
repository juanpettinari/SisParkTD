@{
    ViewBag.Title = "Crear Abono";
}

<h2>Crear Abono</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container">
        <h4>Progreso del registro de abono</h4>
        <div class="progress">
            <div class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0">
                <span class="sr-only">0% completado</span>
            </div>
        </div>
    </div>
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            @Html.Label("Patente", new { @class = "control-label col-md-2 col-md-offset-1" })
            <div class="col-md-4">
                @Html.Editor("patente", new { htmlAttributes = new { @class = "form-control", autocomplete = "off", value = ViewBag.patente } })
                <div class="text-danger">
                    @ViewBag.errorMessage
                </div>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Siguiente" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@model IEnumerable<SisParkTD.Models.MovimientoFinanciero>
@using PagedList
@using PagedList.Mvc

@{
    ViewBag.Title = "Movimientos Financieros";
    var pagedList = (IPagedList)Model;
}

<h2>Movimientos Financieros</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ticket.TicketId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cuenta.Cliente.RazonSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoDeMovimientoFinanciero.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ticket.PrecioTotalDecimal)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.TicketId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuenta.Cliente.RazonSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoDeMovimientoFinanciero.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ticket.PrecioTotalDecimal)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MovimientoFinancieroId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MovimientoFinancieroId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MovimientoFinancieroId })
            </td>
        </tr>
    }

</table>

Página @(pagedList.PageCount < pagedList.PageNumber ? 0 : pagedList.PageNumber) de @pagedList.PageCount

@Html.PagedListPager(pagedList, page => Url.Action("Index", new { page }))

@using Highsoft.Web.Mvc.Charts
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>

@{
    ViewBag.Title = "ReporteMensualSegunHoras";
}

<h2>ReporteMensualSegunHoras</h2>



@(Html.Highsoft().Highcharts(
        new Highcharts
        {
            Title = new Title
            {
                Text = "Cantidad de tickets según hora"
            },

            XAxis = new List<XAxis>
            {
                new XAxis
                {
                    Title = new XAxisTitle
                    {
                        Text = null
                    },
                    Categories = new List<string> { "Menos de 1 Hr", "1Hr-2Hr", "2Hr-3Hr", "3Hr-4Hr", "4Hr-5Hr", "5Hr-6Hr", "6Hr-7Hr", "7Hr-8Hr", "8Hr-9Hr", "9Hr-10Hr", ">10Hr" }
                }
            },
            YAxis = new List<YAxis>
            {
                new YAxis
                {
                    Min = 0,
                    Title = new YAxisTitle
                    {
                        Text = "Cantidad de tickets ocasionales",
                        Align = YAxisTitleAlign.High
                    }
                }
            },
            Tooltip = new Tooltip
            {
                ValueSuffix = " tickets"
            },
            PlotOptions = new PlotOptions
            {
                Bar = new PlotOptionsBar
                {
                    DataLabels = new PlotOptionsBarDataLabels
                    {
                        Enabled = true
                    }
                }
            },
            Legend = new Legend
            {
                Layout = LegendLayout.Vertical,
                Align = LegendAlign.Right,
                VerticalAlign = LegendVerticalAlign.Top,
                X = -40,
                Y = 100,
                Floating = true,
                BorderWidth = 1,
                BackgroundColor = "white",
                Shadow = new Shadow
                {
                    Enabled = true
                }
            },
            Credits = new Credits
            {
                Enabled = false
            },
            Series = new List<Series>
            {
                new BarSeries
                {
                    Name = "Tickets Ocasionales",
                    Data = @ViewData["reportesData"] as List<BarSeriesData>
                }
            }
        }
        , "chart")
)
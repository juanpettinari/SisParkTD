@using Highsoft.Web.Mvc.Charts
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>



@{
    ViewBag.Title = "ReporteMensual";
}

<h2>ReporteMensual</h2>

@(Html.Highsoft().Highcharts(
        new Highcharts
        {
            Title = new Title
            {
                Text = "Recaudación Mensual según tipo de vehículo",
                X = -20
            },
            XAxis = new List<XAxis>
            {
                new XAxis
                {
                    Categories = new List<string> { "Ene", "Feb", "Mar", "Abr", "May", "Jun",
                                "Jul", "Ago", "Sep", "Oct", "Nov", "Dic" },

                }
            },
            YAxis = new List<YAxis>
            {
                new YAxis
                {
                    Title = new YAxisTitle
                    {
                        Text = "Recaudación"
                    },
                    PlotLines = new List<YAxisPlotLines>
                    {
                            new YAxisPlotLines
                        {
                            Value = 0,
                            Width = 1,
                            Color = "#808080"
                        }
                    }
                }
            },
            Tooltip = new Tooltip
            {
                ValueSuffix = " $"
            },
            Legend = new Legend
            {
                Layout = LegendLayout.Vertical,
                Align = LegendAlign.Right,
                VerticalAlign = LegendVerticalAlign.Middle,
                BorderWidth = 0
            },
            Series = new List<Series>
            {
                new LineSeries
                {
                    Name = "Camionetas",
                    Data = @ViewData["camionetasData"] as List<LineSeriesData>
                },
                new LineSeries
                {
                    Name = "Autos",
                    Data = @ViewData["autosData"] as List<LineSeriesData>
                },
                new LineSeries
                {
                    Name = "Motos",
                    Data = @ViewData["motosData"] as List<LineSeriesData>
                }
            }
        }
        , "chart")
)